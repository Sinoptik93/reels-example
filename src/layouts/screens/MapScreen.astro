---
import logoPmq from "@assets/icons/logo-pmq.svg";
import logoDodo from "@assets/icons/logo-dodo-black.svg";
import clock from "@assets/icons/clock.svg";
import employee from "@assets/icons/employee.svg";
import geo from "@assets/icons/geo.svg";
import global from "@assets/icons/global.svg";
import map from "@assets/images/map.png";
---

<section class="container">
    <div class="tablet:min-h-[600px] desktop:min-h-[400px]">
        <div class="relative mobile:pt-[12px] mb-[30px] tablet:mb-[80px] desktop:mb-[108px]">
            <h2 class="text-h-2 mobile:mb-[20px]">Digits make transparent<br> <span>everything</span></h2>

            <p class="text-regular hidden desktop:block desktop:absolute desktop:top-[178px] desktop:left-[477px]">that
                happens in your business<br class="mobile:hidden tablet:hidden"> every moment</p>
            <p class="text-regular mobile:hidden desktop:hidden tablet:absolute tablet:top-[227px] tablet:left-[377px]">
                that happens in your business every moment</p>
            <p class="text-regular tablet:hidden desktop:hidden tablet:absolute tablet:top-[177px] tablet:left-[467px]">
                that happens in your business every moment</p>
        </div>
    </div>

    <div class="flex min-h-[758px] tablet:flex-col mb-10">
        <div class="rounded-3xl bg-gray w-2/3 relative overflow-hidden">
            <img src={map} class="absolute object-cover w-full h-full"/>

            <div class="relative flex px-10 pt-10 pb-10 justify-between">
                <div class="w-[253px]">
                    <img src={logoDodo} class="object-contain w-full h-full"/>
                </div>


                <div>
                    <div class="flex">

                        <div class="w-[24px]">
                            <img src={clock} class="object-contain w-full h-full"/>
                        </div>

                        <p class="text-legend">22 Dec 2022, 14:57:42</p>
                    </div>

                </div>
            </div>
        </div>

        <div class="rounded-3xl bg-gray w-1/3 overflow-hidden">

        </div>
    </div>

    <div
        class="flex mobile:gap-[12px] tablet:gap-[26px] desktop:gap-[60px] mb-10 tablet:flex-col-reverse mobile:flex-col-reverse mobile:border-l mobile:pl-4">
        <div class="w-[62px] tablet:w-[83px] desktop:w-[153px]">
            <img src={logoPmq} class="object-contain w-full h-full"/>
        </div>
        <div class="mobile:hidden tablet:h-[1px] tablet:max-w-[230px] desktop:w-[1px] bg-black"></div>
        <p class="text-regular">Fedor Ovchinnikov of Russian chain<br class="mobile:hidden tablet:hidden"> Dodo Pizza
            may be the Steve Jobs<br class="mobile:hidden tablet:hidden"> of pizza</p>
    </div>
</section>
