---
import {Image, Picture} from '@astrojs/image/components';

import ellipseViolet from "@assets/images/ellipse-violet.svg";
import ellipseOrange from "@assets/images/ellipse-orange.svg";

import dodoLogo from "@assets/icons/logo-dodo-black.svg";
import videowebm from "@assets/videos/dodo-is.webm";
import videomp4 from "@assets/videos/dodo-is.mp4";

import Slider from "@components/Slider";
import videomp4 from "@assets/videos/short-pizza.mp4";
import videowebm from "@assets/videos/short-pizza.webm";
import ellipseViolet from "@assets/images/ellipse-violet-extra.svg";
import ellipseOrange from "@assets/images/ellipse-orange-extra.svg";
import metricNew from "@assets/images/metric-new.svg";
import metricNewMobile from "@assets/images/metric-new-mobile.svg";
import {Image} from "@astrojs/image/components";
import logoBloomberg from "@assets/icons/logo-bloomberg.svg";
import chartArrow from "@assets/icons/arrow-chart.svg";
import chartArrowMobile from "@assets/icons/arrow-chart-mobile.svg";

import Chart from "@components/Chart"
---

<section class="mobile:relative overflow-hidden">
    <div
            style="opacity: 0"
        class="heading-gsap desktop:relative tablet:relative max-w-[100vw] mb-[3rem] tablet:mb-[8.75rem] tablet:px-[2rem] desktop:px-[3rem] tablet:pb-[8rem] desktop:pb-[6rem]">

        <div
            class="absolute desktop:block desktop:w-[112.5rem] tablet:w-[62.5rem] w-[50rem] mobile:top-[13rem] -left-[21.625rem] tablet:-top-[18.75rem] tablet:-left-[29.375rem] desktop:top-[8.75rem] desktop:-left-[45rem]">
            <Image src={ellipseViolet} alt="violet"/>
        </div>

        <div
            class="absolute desktop:block desktop:w-[112.5rem] tablet:w-[62.5rem] w-[50rem] mobile:bottom-auto mobile:top-[20rem] -right-[29.375rem] tablet:-bottom-[35rem] tablet:-right-[40.8125rem] desktop:top-[50rem] desktop:-right-[87rem]">
            <Image src={ellipseOrange} alt="orange"/>
        </div>

        <div class="container relative pt-20 tablet:pt-10 dekstop:pt-20 tablet:mb-10 desktop:mb-40">
            <div class="w-[6.6rem] tablet:w-[8.625rem] desktop:w-[12.875rem] mb-[2rem] tablet:mb-[4rem] desktop:mb-[6rem]">
                <Image src={dodoLogo} alt="Dodo logo"/>
            </div>

            <p class="mobile:mb-16 font-regular text-[3.125rem] tablet:text-[5.5rem] desktop:text-[10.5rem] leading-none tracking-tightest pb-[1rem] tablet:pb-[2rem] desktop:pb-[2rem]">We digitalized <br class="tablet:hidden desktop:hidden">pizza</p>
            <p class="desktop:absolute desktop:ml-[40rem] mobile:top-[13.5rem] mobile:w-[12rem] extra-mobile:w-[14rem] mobile:left-[8.75rem] mobile:absolute text-sub-main mobile:text-[1.5rem] tracking-tightest desktop:mb-6 tablet:mb-8">Master franchise  <br class="tablet:hidden desktop:hidden">of an innovative <br class="tablet:hidden desktop:hidden">QSR pizza chain</p>
        </div>

        <div class="translate-z-0 relative border-translate h-[85vh] tablet:h-[40rem] desktop:h-[52rem] max-w-[130rem] overflow-hidden w-full rounded-2xl tablet:rounded-3xl desktop:rounded-3xl mx-auto">
            <video data-keepplaying class="absolute translate-z-0 object-cover w-full h-full scale-[1.01]" preload="auto" loop autoplay muted playsinline>
                <source src={videowebm} type="video/webm"/>
                {/* <source src={videomp4} type="video/mp4"/> */}
                <source src="https://cdn.dodostatic.net/static/dodobrands-io/video/dodo-is.mp4" type="video/mp4"/>
            </video>

            <button
                class="absolute translate-z-0 top-1/2 -translate-y-2/4 left-1/2 -translate-x-2/4 p-3 rounded-[7.5rem] flex items-center bg-white text-accent-orange transition-all tablet:p-4 desktop:p-4 hover:scale-[1.1]">
                <div
                    class="bg-accent-orange text-white rounded-full flex items-center justify-center w-[4rem] h-[4rem] mr-[0.9375rem] desktop:w-[4.75rem] desktop:h-[4.75rem] desktop:ml-[0.4375rem]">

                    <svg width="29" height="34" viewBox="0 0 29 34" fill="none" xmlns="http://www.w3.org/2000/svg"
                         class="ml-2">
                        <path
                                d="M4.6292 0.464046L27.698 14.722C29.434 15.797 29.434 18.2329 27.698 19.2723L4.6292 33.5309C2.66179 34.7485 0 33.459 0 31.2376V2.75666C0 0.570934 2.66179 -0.754207 4.6292 0.464046Z"
                                fill="currentColor"/>
                    </svg>
                </div>
                <p class="text-[1rem] tablet:text-[1.5rem] desktop:text-[2rem] text-black font-regular text-left leading-custom whitespace-nowrap mr-[1.125rem] ">How
                    we reinvented<br> pizza franchising</p>
            </button>
        </div>
    </div>

    <div class="box container tablet:min-h-[22.875rem] mobile:mb-10 desktop:min-h-[27rem] desktop:mb-15 mobile:pt-4 opacity-0">
        <p class="text-subtitle tablet:mb-1 desktop:mb-2 mobile:mb-5">Who we are</p>

        <div class="relative mb-[1.875rem] tablet:mb-[5rem] desktop:mb-[6.75rem]">
            <h2 class="text-h-2 ">World’s fastest growing <br class="mobile:hidden">pizza chain</h2>
            <p class="text-[0.8rem] tablet:text-[1.5rem] desktop:text-[1.5rem] font-regular text-dark-gray pb-4">Technomic,  2021</p>
            <p class="text-regular mobile:leading-[1.2] tablet:absolute desktop:absolute desktop:top-[9.8rem] desktop:left-[31.25rem] tablet:top-[7.1875rem] tablet:max-w-[30.625rem] tablet:left-[23.75rem]">Dodo Pizza, founded in 2011, is a pizza delivery brand with solid restaurant experience. We’re in the same league as Domino’s, Papa John’s,  Pizza Hut but our own tech lets us do things differently.</p>
        </div>
    </div>

    <div  class="hidden tablet:container desktop:container  mobile:flex-col tablet:flex-col tablet:gap-[5.125rem] desktop:gap-[5.125rem]">
        <div class="relative grow-[2] translate-z-0 h-[31.5rem] mobile:mb-10 mobile:h-[85vh] tablet:max-h-[30rem] tablet:min-w-[20.125rem] desktop:h-[44.5rem] desktop:max-w-[30rem] rounded-4xl overflow-hidden">
            <video data-keepplaying class="absolute translate-z-0 object-cover w-full h-full scale-[1.01]" preload="auto" loop autoplay muted playsinline>
                <source src={videowebm} type="video/webm"/>
                <source src={videomp4} type="video/mp4"/>
            </video>
        </div>

        <div class="mobile:container grow">
            <div class="flex">
                <div class="relative translate-z-0 rounded-3xl desktop:rounded-4xl overflow-hidden p-7 mobile:py-5 tablet:p-8 desktop:p-10 bg-gray">
                    <div
                        class="absolute tablet:hidden w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] mobile:-top-[190px] bottom-auto tablet:bottom-[0] desktop:bottom-[0] -left-[140px] tablet:-left-[1rem] desktop:-left-[280px]">
                        <Image src={ellipseViolet} alt="violet"/>
                    </div>

                    <div
                        class="absolute tablet:hidden w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] -bottom-[180px] tablet:-bottom-[1.75rem] desktop:-bottom-[300px] left-[10px] tablet:left-[1rem] desktop:left-[11px]">
                        <Image src={ellipseOrange} alt="orange"/>
                    </div>

                    <div class="relative z-10">
                        <p class="text-strong-title">900+</p>
                        <p class="text-strong-subtitle">stores</p>
                    </div>
                </div>

                <div class="relative translate-z-0 rounded-3xl desktop:rounded-4xl overflow-hidden p-7 mobile:py-5 tablet:p-8 desktop:p-10 bg-gray">
                    <div
                        class="absolute tablet:hidden w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] -bottom-[44px] tablet:bottom-[0] desktop:bottom-[0] -left-[337px] tablet:-left-[1rem] desktop:-left-[513px]">
                        <Image src={ellipseViolet} alt="violet"/>
                    </div>

                    <div
                        class="absolute tablet:hidden w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] -bottom-[180px] tablet:-bottom-[1.75rem] desktop:-bottom-[300px] -left-[186px] tablet:-right-[1rem] desktop:-left-[270px]">
                        <Image src={ellipseOrange} alt="orange"/>
                    </div>

                    <div class="relative z-10">
                        <p class="text-strong-title">17</p>
                        <p class="text-strong-subtitle">countries</p>
                    </div>
                </div>
            </div>

            <div class="relative translate-z-0 rounded-3xl desktop:rounded-4xl overflow-hidden p-7 mobile:py-5 tablet:p-8 desktop:p-10 bg-gray w-full">
                <div
                    class="absolute tablet:hidden desktop:hidden w-[22.563em] tablet:w-[20rem] desktop:w-[20rem] -top-[317px] tablet:-top-[1.75rem] desktop:-left-[450px] -left-[140px] tablet:-left-[1rem] desktop:top-[450px]">
                    <Image src={ellipseViolet} alt="violet"/>
                </div>

                <div
                    class="absolute tablet:hidden w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] -bottom-[53px] tablet:-bottom-[1.75rem] desktop:-bottom-[105px] right-auto left-[12px] tablet:-right-[1rem] desktop:left-[11px]">
                    <Image src={ellipseOrange} alt="orange"/>
                </div>

                <div class="relative">
                    <p class="text-strong-title">$ 831 mln</p>
                    <p class="text-strong-subtitle">2022 sales</p>
                </div>
            </div>
        </div>
    </div>

    <div class="box-2 tablet:container desktop:container flex mobile:flex-col-reverse mobile:mb-6 tablet:mb-[12rem] desktop:mb-[12rem] ">
        <div class="relative flex mobile:shrink-0 flex-col grow desktop:max-w-[30rem]">
            <div class="overflow-hidden grow flex items-center translate-z-0 rounded-3xl desktop:rounded-5xl p-7 mobile:py-5 tablet:p-8 desktop:pt-10 desktop:pb-5 desktop:px-20 bg-gray">
                <div
                    class="absolute border-accent-violett border-2t tablet:hidden border-accent-violett w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] -top-[1rem] tablet:top-[0] desktop:-top-[4rem] -left-[6rem] tablet:-left-[1rem] desktop:-left-[25rem] bottom-auto">
                    <Image src={ellipseViolet} alt="violet"/>
                </div>

                <div
                    class="absolute tablet:hidden  border-2t border-accent-oranget w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] top-[1rem] tablet:-top-[1.75rem] desktop:top-[6rem] -right-[8.6rem] tablet:-right-[1rem] desktop:-right-[18rem]">
                    <Image src={ellipseOrange} alt="orange"/>
                </div>

                <div class="relative z-10">
                    <div class="flex">
                        <p class="text-strong-title">$831</p>
                        <p class="text-[1rem] tablet:text-[2rem] desktop:text-[2rem] text-accent-orange font-regular ml-2 tablet:ml-4 desktop:ml-4 whitespace-nowrap" >↑ 56%</p>
                    </div>
                    <p class="text-strong-subtitle">mln</p>
                </div>
            </div>

            <div class="flex mobile:flex-row tablet:flex-col desktop:flex-col">
                <div class="overflow-hidden grow flex items-center translate-z-0 rounded-3xl desktop:rounded-5xl  p-7 mobile:py-5 tablet:p-8 desktop:pt-10 desktop:pb-5 desktop:px-20 bg-gray">
                    <div
                        class="absolute tablet:hidden border-accent-violett border-2t w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] -top-[8rem] tablet:top-[0rem] desktop:-top-[17.6rem] -left-[6rem] tablet:-left-[1rem] desktop:-left-[25rem]">
                        <Image src={ellipseViolet} alt="violet"/>
                    </div>

                    <div
                        class="absolute tablet:hidden border-2t border-accent-oranget w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] -top-[6rem] tablet:top-[1.75rem] desktop:-top-[7.6rem] -right-[16.6rem] tablet:-right-[1rem] desktop:-right-[18rem]">
                        <Image src={ellipseOrange} alt="orange"/>
                    </div>

                    <div class="relative z-10">
                        <p class="text-strong-title">900+</p>
                        <p class="text-strong-subtitle">stores</p>
                    </div>
                </div>

                <div class="overflow-hidden grow flex items-center translate-z-0 rounded-3xl desktop:rounded-5xl p-7 mobile:py-5 tablet:p-8 desktop:pt-10 desktop:pb-5 desktop:px-20 bg-gray mobile:max-w-[6.9rem]">
                    <div
                        class="absolute  tablet:hidden border-2t border-accent-violett w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] -top-[8rem] tablet:top-[0rem] desktop:-top-[31.2rem] -left-[24.6rem] tablet:-left-[1rem] desktop:-left-[25rem]">
                        <Image src={ellipseViolet} alt="violet"/>
                    </div>

                    <div
                        class=" absolute tablet:hidden border-2t border-accent-oranget w-[22.563rem] tablet:w-[56.25rem] desktop:w-[56.25rem] -top-[6rem] tablet:-top-[1.75rem] desktop:-top-[21.2rem] -right-[9.6rem] tablet:-right-[1rem] desktop:-right-[18rem]">
                        <Image src={ellipseOrange} alt="orange"/>
                    </div>

                    <div class="relative z-10">
                        <p class="text-strong-title">17</p>
                        <p class="text-strong-subtitle">countries</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="relative flex items-end overflow-hidden translate-z-0 rounded-3xl pt-[3rem] desktop:rounded-5xl p-7 mobile:py-5 tablet:p-8 tablet:pt-[5rem] desktop:pb-[3.125rem] desktop:pt-[1rem] desktop:px-[3.125rem]  bg-gray grow desktop:max-w-[920px]">
            <div class="grow flex flex-col">
                <div
                    class="absolute top-[1.5rem] tablet:top-[3rem] desktop:top-[3rem] flex gap-[0.75rem] mb-10 flex-col-reverse border-l pl-4 tablet:pl-8 desktop:pl-8">
                    <div class="w-[6rem] tablet:w-[10.72rem] desktop:w-[10.72rem]">
                        <Image src={logoBloomberg} alt="Logog bloomberg" class="object-contain w-full desktop:mt-3"/>
                    </div>

                    <p class="text-regular-2 text-[1.125rem] desktop:text-4xl tracking-tightest leading-[1.15]">Dodo
                        Pizza has<br class="tablet:hidden desktop:hidden"> turned into <br class="mobile:hidden tablet:hidden">one of <br class="tablet:hidden desktop:hidden">the fastest-growing  <br class="tablet:hidden">restaurant chains</p>
                </div>

                <div class="absolute mobile:top-[2rem] mobile:left-[2rem] mobile:w-full mobile:max-w-[70%] tablet:top-[4rem] tablet:left-[4rem] tablet:w-[43rem] desktop:top-[4rem] desktop:left-[4rem] desktop:w-[43rem]">
                    <Image src={chartArrow} alt="chart-arrow" class="mobile:hidden object-contain w-full"/>
                    <Image src={chartArrowMobile} alt="chart-arrow" class="object-contain tablet:hidden desktop:hidden w-full"/>
                </div>

                <div class="relative">
                    <!--<Image src={metricNew} alt="metric" />-->
                    <Chart client:only="react" />
                </div>

                <div class="hidden relative tablet:hidden desktop:hidden grow">
                    <Image src={metricNewMobile} alt="metric" class="object-contain w-full h-full" />
                </div>

                <p class="text-[0.625rem] tablet:text-[1rem] desktop:text-[1rem] tracking-widest uppercase text-center pt-2 tablet:pt-4 desktop:pt-4">system sales in mln usd</p>
            </div>
        </div>
    </div>

    <p class="container text-[0.8rem] font-regular text-dark-gray pt-4 tablet:hidden desktop:hidden mobile:hidden">Technomic, 2021</p>
</section>
