---
import { Image } from '@astrojs/image/components';

import dodoLogo from "@assets/icons/logo-dodo-black.svg";
import map from "@assets/videos/dodo-planet.gif";
import mapVideo from "@assets/videos/dodo-planet.webm";
---


<section class="container mb-40 desktop:mb-[312px]">
    <div class="tablet:min-h-[600px] desktop:min-h-[381px] mobile:mb-8 tablet:mb-20">
        <p class="text-subtitle">Franchise</p>

        <div class="relative mobile:pt-3">
            <h2 class="text-h-2 mb-8 mobile:mb-6 leading-none">We are looking for <span>strong partners</span></h2>

            <p class="text-regular desktop:block desktop:absolute desktop:top-[151px] desktop:left-[389px]">Target regions: Middle East, Africa, Asia, <br class="tablet:hidden">and South America.</p>
        </div>
    </div>


    <div class="relative flex bg-gray rounded-xl  pb-5 pt-[110px] desktop:px-8 desktop:pt-[148px] desktop:pb-[94px] tablet:px-4 tablet:pt-[100px] tablet:pb-[86px] mobile:flex-col mobile:px-5  mobile:gap-4">
        <div class="absolute top-5 left-5 w-[117px] tablet:w-[170px] desktop:w-[254px] tablet:top-6 tablet:left-6 desktop:top-10 desktop:left-10">
            <Image src={dodoLogo} alt="Dodo logo"/>
        </div>

        <div class="flex w-full gap-[125px] tablet:items-center">

            <div class="flex flex-col items-center gap-4 desktop:mt-[33px] desktop:ml-[10px]">
                <p class="text-regular-3 hidden mobile:block">Franchise terms</p>
                {/*
                    <div class="shrink-0 w-[130px] tablet:w-[211px] desktop:w-[313px]">
                        <Image src={map} alt="map"/>
                    </div>
                */}

                <div class="shrink-0 w-[130px] tablet:w-[211px] desktop:w-[313px] overflow-hidden rounded-full">
                    <video class="min-h-full min-w-full object-cover scale-[1.15]" loop autoPlay muted playsInline >
                        <source src={mapVideo} type="video/mp4"/>
                    </video>
                </div>
            </div>


            <div class="flex flex-col grow gap-2.5 mobile:shrink-0">
                <p class="text-regular-3 mobile:hidden">Franchise terms</p>

                <div class="flex justify-between gap-8 mobile:flex-col desktop:mb-[38px] desktop:border-b-[1px] desktop:pb-[38px]">
                    <div>
                        <p class="text-3xl tracking-tightest desktop:text-[60px] tablet:text-4xl ">$150 000</p>
                        <p class="text-unit-title">country fee</p>
                    </div>

                    <div>
                        <p class="text-3xl tracking-tightest desktop:text-[60px] tablet:text-4xl">5%</p>
                        <p class="text-unit-title">country fee</p>
                    </div>

                    <div>
                        <p class="tracking-tightest text-3xl desktop:text-[60px] tablet:text-4xl">$5000</p>
                        <p class="text-unit-title">per store fee</p>
                    </div>
                </div>

                <p class="text-regular-3 mobile:hidden">We have no other fees. Tech is part of our franchise package along with full operational support. <a href="#">More details here.</a></p>
            </div>
        </div>

        <p class="text-regular-3 hidden mobile:block mobile:text-xl">We have no other fees. Tech is part of our franchise package along with full operational support. <a href="#">More details here.</a></p>
    </div>

</section>
