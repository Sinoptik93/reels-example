---
import { Image } from '@astrojs/image/components';

import antonDeryagin from "@assets/images/anton-deryagin.png";
import davidSweeney from "@assets/images/david-sweeney.png";
import ContactForm from "@components/ContactForm";
---

<section class="tablet:container desktop:container mobile:mb-10 tablet:mb-[4.625rem] desktop:mb-[15rem]">
    <div class="box mobile:container relative mb-10 tablet:mb-[1.875rem] desktop:mb-[1.625rem]">
        <h2 class="text-h-2">Keep in touch</h2>
    </div>

    <div class="flex mobile:flex-col">
        <div class="box relative grow desktop:basis-[29.6875rem] flex min-h-[80vh] tablet:min-h-[32.5rem] tablet:w-1/3 desktop:min-h-[38.75rem] rounded-3xl overflow-hidden items-end">
            <Image src={antonDeryagin} format="webp" alt="Anton Deryagin photo" class="absolute object-cover w-full h-full"/>

            <div class="flex flex-col relative px-4 py-14 tablet:px-6 tablet:py-15 desktop:px-10 desktop:pb-[3.375rem]">
                <p class="text-regular-3 text-white">Anton Deryagin</p>
                <p class="text-contact-info text-white">Head of International Franchising</p>
                <a class="text-contact-link text-white" href="mailto:a.deryagin@dodobrands.io">Mail</a>
                <a class="text-contact-link text-white" href="#">Linkedin</a>
            </div>
        </div>

        <div class="box relative grow desktop:basis-[29.6875rem] flex min-h-[80vh] tablet:min-h-[32.5rem] tablet:w-1/3 desktop:min-h-[38.75rem] rounded-3xl overflow-hidden items-end">
            <Image src={davidSweeney} format="webp" alt="David Sweeney photo" class="absolute object-cover w-full h-full"/>

            <div class="flex flex-col relative px-4 py-14 tablet:px-6 tablet:py-15 desktop:px-10 desktop:pb-[3.375rem]">
                <p class="text-regular-3 text-white">David Sweeney</p>
                <p class="text-contact-info text-white">Head of Business Development</p>
                <a class="text-contact-link text-white" href="mailto:d.sweeney@dodobrands.io">Mail</a>
                <a class="text-contact-link text-white" href="#">Linkedin</a>
            </div>
        </div>

        <div class="box">
            <ContactForm client:only="react"/>
        </div>
    </div>
</section>
