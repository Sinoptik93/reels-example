---
import { Image } from '@astrojs/image/components';

import team from "@assets/images/team-example.png";
import logoRestaurantLeadership from "@assets/icons/logo-restaurant-leadership.svg";
import dodoIs from "@assets/videos/dodo-is.webm";
import dodoIsExtra from "@assets/videos/dodo-is.mp4";
// <Image src={logoRestaurantLeadership} alt="Logo Restaurant Leadership" class="object-contain w-full h-full"/>

---

<section>
    <div class="tablet:container desktop:container flex mobile:mb-[2.9rem] tablet:mb-[9.8125rem] tablet:gap-[10.5rem] desktop:gap-10 desktop:mb-[12rem] mobile:flex-col tablet:flex-col">
        <div class="box mobile:container flex flex-col desktop:flex-1 tablet:pt-10">
            <p class="text-regular-2 desktop:text-[5.9rem] mobile:text-[3rem] mobile:mb-8 leading-custom tablet:mb-20 desktop:mt-[1.4rem]">
                All tech ready from day one and free for franchisees
            </p>

            <div class="flex mobile:hidden desktop:hidden mobile:gap-[0.75rem] tablet:gap-[1.75rem] desktop:gap-[3.75rem] mb-10 tablet:flex-col-reverse mobile:flex-col-reverse mobile:border-l mobile:pl-4">
                <div class="w-[6.4375rem] tablet:w-[10rem] desktop:w-[12.0625rem]">
                    <Image src={logoRestaurantLeadership}  alt="Logo Restaurant Leadership" class="object-contain w-full h-full"/>
                </div>
                <div class="mobile:hidden tablet:h-[0.0625rem] tablet:max-w-[14.375rem] desktop:w-[0.0625rem] bg-black"></div>
                <p class="tablet:text-4xl desktop:text-3xl tablet:leading-custom">Industryâ€™s first truly digital-first concept, <br class="tablet:hidden">with technology figuring into all aspects<br class="tablet:hidden">of operations</p>
            </div>
        </div>

        <div class="box-2 relative translate-z-0 mobile:mb-8 desktop:max-w-[42.5rem] mobile:h-[85vh] tablet:min-w-[20.125rem] rounded-4xl overflow-hidden desktop:flex-1 tablet:max-h-[30rem] desktop:max-h-[59.375rem]">
            <video data-keepplaying class="translate-z-0 min-h-full min-w-full object-cover scale-[1.15]" loop autoplay muted playsinline >
                <source src={dodoIs} type="video/webm"/>
                <source src={dodoIsExtra} type="video/mp4"/>
            </video>
        </div>

        <div class="box mobile:container">
            <div class=" border-2 border-accent-orange rounded-3xl p-[2.1rem] tablet:p-[1.5rem] desktop:p-[1.5rem]">
                <p class="text-accent-orange font-regular text-[1.6rem] tablet:text-[1.5rem] desktop:text-4xl leading-[1.2]">
                    Improved,<br class="mobile:hidden"> developed <br>
                    and supported  <br class="mobile:hidden">
                    by our <br class="desktop:hidden tablet:hidden">team <br class="mobile:hidden"/>24/7
                </p>
            </div>
        </div>
    </div>
</section>
