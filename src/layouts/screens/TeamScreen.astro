---
import { Image } from '@astrojs/image/components';

import team from "@assets/images/team-example.png";
import logoRestaurantLeadership from "@assets/icons/logo-restaurant-leadership.svg";
import dodoIs from "@assets/videos/dodo-is.webm";
import dodoIsExtra from "@assets/videos/dodo-is.mp4";
// <Image src={logoRestaurantLeadership} alt="Logo Restaurant Leadership" class="object-contain w-full h-full"/>

---

<section class="tablet:container desktop:container flex mobile:mb-[8rem] tablet:mb-[9.8125rem] tablet:gap-[10.5rem] desktop:gap-10 desktop:mb-[18.75rem] mobile:flex-col tablet:flex-col">
    <div class="mobile:container flex flex-col desktop:flex-1 tablet:pt-10">
        <p class="text-regular-2 desktop:text-[5.9rem] mobile:text-[2rem] mobile:mb-8 desktop:leading-custom tablet:mb-20 desktop:-mt-20">
            All tech ready since day one
            and free for franchisees
        </p>

        <div class="flex mobile:hidden desktop:hidden mobile:gap-[0.75rem] tablet:gap-[1.75rem] desktop:gap-[3.75rem] mb-10 tablet:flex-col-reverse mobile:flex-col-reverse mobile:border-l mobile:pl-4">
            <div class="w-[6.4375rem] tablet:w-[10rem] desktop:w-[12.0625rem]">
                <Image src={logoRestaurantLeadership}  alt="Logo Restaurant Leadership" class="object-contain w-full h-full"/>
            </div>
            <div class="mobile:hidden tablet:h-[0.0625rem] tablet:max-w-[14.375rem] desktop:w-[0.0625rem] bg-black"></div>
            <p class="tablet:text-4xl desktop:text-3xl tablet:leading-custom">Industryâ€™s first truly digital-first concept, <br class="tablet:hidden">with technology figuring into all aspects<br class="tablet:hidden">of operations</p>
        </div>
    </div>

    <div class="relative translate-z-0 mobile:mb-10 desktop:max-w-[42.5rem] mobile:h-[85vh] tablet:min-w-[20.125rem]  rounded-3xl overflow-hidden desktop:flex-1 tablet:max-h-[30rem] desktop:max-h-[59.375rem]">
        <video class="translate-z-0 min-h-full min-w-full object-cover scale-[1.15]" loop autoplay muted playsinline >
            <source src={dodoIs} type="video/webm"/>
            <source src={dodoIsExtra} type="video/mp4"/>
        </video>
    </div>

    <div class="mobile:container">
        <div class=" border-2 border-accent-orange rounded-3xl p-6 tablet:p-10 desktop:p-10">
            <p class="text-accent-orange font-regular text-[1.5rem] tablet:text-[1.5rem] desktop:text-4xl leading-custom">
                Improved,<br class="mobile:hidden"> developed <br>
                and supported  <br class="mobile:hidden">
                by our <br class="desktop:hidden tablet:hidden">team 24/7
            </p>
        </div>
    </div>
</section>
